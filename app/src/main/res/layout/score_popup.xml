<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:background="@drawable/popup_background"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@color/cgray">
        <TextView
            android:id="@+id/winningMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Congratulations!"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="30sp"
            android:fontFamily="@font/permanentmarker_regular"
            />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">
        <Button
            android:id="@+id/playAgainButton"
            android:fontFamily="@font/permanentmarker_regular"
            android:textSize="20sp"
            android:textColor="#fff"
            android:text="Play Again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/green_popup_button_style"
            android:onClick="playAgain"/>
        <Button
            android:id="@+id/quitButton"
            android:text="Menu"
            android:onClick="quit"
            android:textColor="#fff"
            android:textSize="20sp"
            android:fontFamily="@font/permanentmarker_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/red_popup_button_style"/>
    </LinearLayout>


</LinearLayout>